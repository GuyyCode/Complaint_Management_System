@model Complaint_Management_System.Models.Entities.ComplaintResponse

@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3>Reply To Complaint</h3>
    <hr />
    @using (Html.BeginForm("Index", "ComplaintResponse", FormMethod.Post, new { id = "ComplaintResponseForm", @autocomplete = "off" }))
    {
        <div class="form-group">
            <div class="row">
                @Html.HiddenFor(c => c.ComplaintID)
                @Html.HiddenFor(c => c.StaffID)
                <label class="control-label col-md-2" for="ComplainResponse">
                    @Html.LabelFor(m => m.Reply_Description)
                </label>
                <div class="col-sm-9 col-md-4">
                    @Html.TextBoxFor(m => m.Reply_Description, new { @class = "form-control", @autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Reply_Description)
                </div>
                <span class="required col-md-1"> * </span>
            </div>
            <br />
            @*<div class="row" visible="false">
                    <label visible="false" class="control-label col-md-2" for="Complaint_Date">
                        @Html.LabelFor(m => m.Complaint_Date)
                    </label>
                    <div visible="false" class="col-sm-9 col-md-4">
                        @Html.TextBoxFor(m => m.Complaint_Date, new { @class = "form-control", @autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Complaint_Date)
                    </div>
                    <span class="required col-md-1"> * </span>
                </div>*@
            <br />

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4">
                    <button class="btn-success btn" type="submit">Save</button>
                </div>
            </div>
        </div>
    }

</div>