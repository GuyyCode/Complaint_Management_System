@model Complaint_Management_System.Models.Entities.Complaint
@{

    //ViewData["Title"] = "New Announcement";
}
@Html.AntiForgeryToken()
<div class="form-horizontal">
    <h3>New Complaint</h3>
    <hr />

    <div class="form-group">
        <div class="row">
            <label class="control-label col-md-2" for="UserName">
                @Html.LabelFor(m => m.Description)
            </label>
            <div class="col-sm-9 col-md-4">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <span class="required col-md-1"> * </span>
        </div>
        <br />
        <div class="row">
            <label class="control-label col-md-2" for="Password">
                @Html.LabelFor(m => m.Complaint_Date)
            </label>
            <div class="col-sm-9 col-md-4">
                @Html.TextBoxFor(m => m.Complaint_Date, new { @class = "form-control", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.Complaint_Date)
            </div>
            <span class="required col-md-1"> * </span>
        </div>
        <br />

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <button class="btn-success btn" type="submit">Save</button>
            </div>
        </div>
    </div>
</div>}