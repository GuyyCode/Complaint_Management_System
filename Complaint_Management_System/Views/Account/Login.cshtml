@model Complaint_Management_System.Models.LoginViewModel

@{
    ViewBag.Title = "Sign in";
}

<br />
<section class="content-wrapper menu-content">
</section>
<section class="content-wrapper main-content clear-fix">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "loginForm", @autocomplete = "off" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h2>Sign in</h2>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.StudentNo, new { @class = "control-label col-sm-3 col-md-2" })
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.StudentNo, new { @class = "form-control" })
                    <span class="help-line">
                        @Html.ValidationMessageFor(m => m.StudentNo)
                    </span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label col-sm-3 col-md-2" })
                <div class="col-md-4">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                    <span class="help-line">
                        @Html.ValidationMessageFor(m => m.Password)
                    </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-success">Sign In</button>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Register", "Register", null, new { @class = "register" }) if you don't have any login details.
                </div>
            </div>
        </div>
    }
</section>


